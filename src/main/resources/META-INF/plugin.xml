<idea-plugin>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK1="false" supportsK2="true" />
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                implementationClass="com.github.orangeguo.fillkotlinarguments.FillAllRemainingArgumentsKotlinInspection"
                groupPath="Kotlin"
                groupName="Fill arguments"
                enabledByDefault="true"
                level="INFORMATION"
                language="kotlin"
                displayName="Specify all remaining arguments"/>
    </extensions>
</idea-plugin>
