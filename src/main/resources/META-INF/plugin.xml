<idea-plugin>
    <id>com.github.orange-guo.fill-kotlin-arguments</id>
    <name>Fill Kotlin Arguments</name>
    <version>0.0.1</version>
    <vendor url="https://github.com/orange-guo">ornage-guo</vendor>

    <description><![CDATA[
        <p>A JetBrains IDEA plugin used to fill kotlin arguments.</p>
        <a target="_blank" href="https://raw.githubusercontent.com/orange-guo/fill-kotlin-arguments/main/screencast.gif">
            <img src="https://raw.githubusercontent.com/orange-guo/fill-kotlin-arguments/main/screencast.gif">
        </a>
        </p>
    ]]></description>

    <change-notes><![CDATA[]]>
    </change-notes>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK1="false" supportsK2="true" />
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                implementationClass="com.github.orangeguo.fillkotlinarguments.FillAllRemainingArgumentsKotlinInspection"
                groupPath="Kotlin"
                groupName="Fill arguments"
                enabledByDefault="true"
                level="INFORMATION"
                language="kotlin"
                displayName="Specify all remaining arguments"/>
    </extensions>
</idea-plugin>
